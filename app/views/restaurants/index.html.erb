
<h2>List of restaurants</h2>
<ul>
  <% @restaurants.each do |rest| %>
    <p><%= rest.name%></p>
      <li>📍 <%= rest.address%></li>
      <li>☎️<%= rest.phone_number%></li>
      <li>🍴 <%= rest.category%></li>
     <li><%= link_to "See this restaurant", restaurant_path(rest), class: "btn btn-primary"%></li>
  <% end %>
</ul>


<ul>
  <p><%= @restaurant.name%></p>
    <li>📍 <%= @restaurant.address%> </li>
    <li>☎️<%= @restaurant.phone_number%></li>
    <li>🍴 <%= @restaurant.category%></li>
</ul>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>Customer comment: <%= review.content %></li>
    <li>Customer Satisfaction: <%= review.rating %>/5</li>
  <% end %>
</ul>

<p><%= link_to "Add a review to this restaurant",  new_restaurant_review_path(@restaurant), class: "btn btn-primary"%></p>

<% flash.each do |type, message| %>
  <div class="alert alert-<%= type %>"><%= message %></div>
<% end %>
